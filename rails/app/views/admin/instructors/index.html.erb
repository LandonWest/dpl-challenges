<h1>Instructors</h1>

<div id="controls">
	<%= link_to(image_tag('add.png', :alt => 'Add new instructor') + ' Add Instructor', new_admin_instructor_path, :title => 'Add new instructor') %>
	<p><%= page_entries_info(@instructors) %></p>
</div>

<% unless @instructors.empty? %>
  <%= will_paginate(@instructors) %>
	<table border="0" cellspacing="0" cellpadding="0" class="itemtable">
		<tr>
			<th>Photo <small>(click to edit)</small></th>
			<th>Name</th>
			<th>Courses</th>
			<th>Date Added</th>
			<th>&nbsp;</th>
		</tr>
		<% @instructors.each do |instructor| %>
			<tr class="<%= cycle('odd', 'even') %>">
				<td><%= link_to(image_tag(instructor.image.url(:thumb)), edit_admin_instructor_path(instructor)) %></td>
				<td><%= instructor.name %></td>
				<td><%= instructor.courses.size %></td>
				<td><%= instructor.created_at.strftime('%m/%d/%Y') %></td>
				<td><%= link_to(image_tag('delete.png'), admin_instructor_path(instructor), :method => :delete, :confirm => 'Are you sure you want to remove this?') %></td>
			</tr>
		<% end %>
	</table>
	<%= will_paginate(@instructors) %>
<% end %>