<h1>Update Video</h1>

<% form_for @video, :url => admin_video_path(@video) do |f| -%>
	<img src="<%= "http://img.youtube.com/vi/#{@video.youtube_key}/0.jpg" %>"  />
  <%= render :partial => 'form', :locals => { :f => f } %>
	<p><%= f.submit('Update') %> -or- <%= link_to('cancel', admin_videos_path) %></p>
<% end -%>